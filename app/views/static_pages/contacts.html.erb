<style>
.navbar-shadow{
    box-shadow: 0px 0px 5px grey;
    }
</style>
<div class="uk-text-center uk-margin-top uk-text-lead uk-text-bold uk-visible@s"><h1><%= t("contact_page.title")  %> </h1></div>
<div class="uk-text-center uk-margin uk-text-lead  uk-hidden@s"><%= t("contact_page.title")  %> </div>
<div class="uk-container uk-margin-large-top  uk-margin-large-bottom">  
    <div class="uk-child-width-1-3@m uk-grid-match" uk-grid>
    <div>
        <div class="uk-card uk-card-default">
            <div class="uk-card-media-top">
                <img src="/assets/contact/location.jpg" alt="">
            </div>
            <div class="uk-card-body">
                <h3 class="uk-card-title"><%= t("contact_page.cards.location.title")  %></h3>
                <p>
                    <ul class="uk-list uk-list-bullet">
                        <li><%= t("contact_page.cards.location.adress")  %></li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
    <div>
        <div class="uk-card uk-card-default">
            <div class="uk-card-media-top">
                <img src="/assets/contact/phone.jpg" alt="">
            </div>
            <div class="uk-card-body">
                <h3 class="uk-card-title"><%= t("contact_page.cards.phone.title")  %></h3>
                <p>                    
                    <ul class="uk-list uk-list-bullet">
                        <li><%= t("contact_page.cards.phone.phone1")  %></li>
                        <li><%= t("contact_page.cards.phone.phone2")  %></li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
    <div>
        <div class="uk-card uk-card-default">
            <div class="uk-card-media-top">
                <img src="/assets/contact/job.jpg" alt="">
            </div>
            <div class="uk-card-body">
                <h3 class="uk-card-title"><%= t("contact_page.cards.job.title")  %></h3>
                <p>
                    <ul class="uk-list uk-list-bullet">
                        <li><%= t("contact_page.cards.job.job1")  %></li>
                        <li><%= t("contact_page.cards.job.job2")  %></li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>
    <div uk-grid class="uk-grid-match ">
        <div class="uk-width-1-2@s" uk-scrollspy="cls: uk-animation-slide-left;">
            <div class="uk-card uk-card-default uk-card-body ">
                <div class="uk-text-center ">
                    <h1 class="fas fa-edit "></h1>
                </div>
                <%=  form_tag(controller: "static_pages", action: "home",  method: "get") do  %>
                 <div class="uk-margin-medium">
                    <label class="uk-form-label" for="form-stacked-text"><%= t('contact_page.callback.name.label')  %></label>
                    <div class="uk-form-controls">
                       <input class="uk-input small" id="form-stacked-text" type="text" placeholder="<%= t('contact_page.callback.name.input.placeholder')  %>"/>
                    </div>
                </div>
                 <div class="uk-margin-medium">
                    <label class="uk-form-label" for="form-stacked-text"><%= t('contact_page.callback.email.label')  %></label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="form-stacked-text" type="email" placeholder="<%= t('contact_page.callback.email.input.placeholder')  %>"/>
                    </div>
                </div>
                 <div class="uk-margin-medium">
                    <label class="uk-form-label" for="form-stacked-text"><%= t('contact_page.callback.comment.label')  %></label>
                    <div class="uk-form-controls">
                        <textarea class="uk-textarea" rows="6" placeholder="<%= t('contact_page.callback.comment.input.placeholder')  %>"></textarea>
                    </div>
                </div>
                 <div class="uk-margin-medium">
                    <div class="uk-form-controls">
                        <button class="uk-button uk-button-primary"><%= t("buttons.submit") %></button>
                    </div>
                </div> 
                <% end %>
            </div>
        </div>
        <div class="uk-width-1-2@s "  style=" height: 700px !important;" uk-scrollspy="cls: uk-animation-slide-right; ">
            <div class="uk-card uk-card-default uk-card-body uk-text-center ">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23537.331106295354!2d70.27164443099396!3d42.48801516426381!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38a89aff46363e99%3A0x25fdbcbcc8b1d61f!2z0KLRjtC70YzQutGD0LHQsNGB!5e0!3m2!1sru!2skz!4v1541960099088" width="100%" height="100%" style="sisplay:block; overflow:hidden; height:100%; width:100%"  allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>